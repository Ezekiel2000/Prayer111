<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sign"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.kccc.prayer111.SignInActivity">

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="567dp"
        android:id="@+id/guideline"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="182dp"
        app:layout_constraintGuide_percent="0.50555557"/>


    <ImageView
        android:src="@drawable/login_background"
        android:layout_width="0dp"
        android:layout_height="161dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.57"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/imageView"/>


    <EditText
        android:id="@+id/text_input_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="이메일"
        android:cursorVisible="false"
        android:ems="10"
        android:drawablePadding="20dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColorHint="@color/colorText"/>

    <EditText
        android:id="@+id/text_input_password"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="비밀번호"
        android:cursorVisible="false"
        android:ems="10"
        android:drawablePadding="20dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_input_email"
        android:layout_marginTop="5dp"
        android:paddingLeft="20dp"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColorHint="@color/colorText"/>

    <Button
        android:id="@+id/btn_sign_in"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="이메일로 시작하기"
        android:background="@drawable/login_btn"
        android:layout_weight="1"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/text_input_password"
        android:layout_marginTop="17dp"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="40dp"
        app:layout_constraintRight_toRightOf="parent"/>

    <CheckBox
        android:text="Remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="@color/colorCheckBoxText"
        android:textColorHint="@color/colorChecked"
        android:textColorLink="@color/colorChecked"
        android:textColorHighlight="@color/colorChecked"
        app:layout_constraintTop_toBottomOf="@+id/btn_sign_in"
        android:layout_marginTop="6dp"/>

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline2"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="40dp"
        app:layout_constraintGuide_begin="40dp"/>

    <Button
        android:text="카카오톡으로 시작하기"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/btn_sign_kakaotalk"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBox"
        android:background="@drawable/kakao_btn"
        android:textColor="#381e1f"/>

    <Button
        android:text="페이스북으로 시작하기"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_sign_facebook"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_sign_kakaotalk"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:background="@drawable/facebook_btn"
        android:textColor="#ffffff"/>

    <TextView
        android:text="회원가입"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#6b58ca"
        android:id="@+id/text_sign_up"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_sign_in"
        android:layout_marginEnd="40dp"
        app:layout_constraintRight_toRightOf="parent"/>


</android.support.constraint.ConstraintLayout>
