<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
        android:id="@+id/today_pray_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/pray"
        android:textColor="@color/colorTodayTitle"
        android:gravity="center"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="55sp"/>

    <TextView
        android:id="@+id/today_pray_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lineSpacingMultiplier="1"
        android:text="2017 나사렛형제들 금식수련회가 약 400여명 참석하여 잘 마치게 하심을 감사합니다 나사렛들이 계속적으로 삶 속에서 하나님과 깊이 있게 교제하게 하소서"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/today_pray_title"
        android:textSize="22sp"
        android:textColor="@color/colorTodayText"
        />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="81dp"
        app:srcCompat="@drawable/bg_today_pray"
        android:id="@+id/today_background"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="56dp"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:scaleType="fitCenter"
        android:alpha="0.6"/>


</android.support.constraint.ConstraintLayout>